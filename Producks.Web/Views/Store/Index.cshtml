@model Producks.Web.Models.StoreIndexVM

@{
    ViewData["Title"] = "Index";
}

<h1>Categories Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categories.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories.FirstOrDefault().Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="ProductsByCategory" asp-route-id="@item.Name">View Products</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h1>Brands Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Brands.FirstOrDefault().Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Brands)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="ProductsByBrand" asp-route-id="@item.Name">View Products</a>
                </td>
            </tr>
        }
    </tbody>
</table>